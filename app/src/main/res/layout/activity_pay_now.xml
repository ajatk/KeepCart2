<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.RequestToShift">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10sp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10sp"
            android:padding="2sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/totalBill_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33dp"
                    android:layout_marginStart="33dp"
                    android:layout_marginTop="40dp"
                    android:padding="5sp"
                    android:drawableBottom="@drawable/login_underline"
                    android:text="Total Amount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/profile_name_text_size"
                    app:layout_constraintEnd_toStartOf="@+id/totalBill"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/totalBill"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="40dp"
                    android:drawableBottom="@drawable/login_underline"
                    android:gravity="center"
                    android:padding="5sp"
                    android:drawablePadding="10sp"
                    android:drawableLeft="@drawable/rupee_indian"
                    android:hint="@string/select_user"
                    android:textColor="@color/black"
                    android:textSize="@dimen/profile_name_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/totalBill_text"
                    app:layout_constraintTop_toTopOf="parent" />


                <RadioButton
                    android:id="@+id/radio_btnWallet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:drawableBottom="@drawable/login_underline"
                    android:ems="10"
                    android:hint="@string/wallet_here"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/totalBill" />

                <RadioButton
                    android:id="@+id/paytm_pay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:drawableBottom="@drawable/login_underline"
                    android:ems="10"
                    android:visibility="gone"
                    android:hint="@string/wallet_here"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/radio_btnWallet" />

                <Button
                    android:id="@+id/payByPaytm_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/button_background"
                    android:text="Request to shift"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/paytm_pay" />


            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
</layout>
