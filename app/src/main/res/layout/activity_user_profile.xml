<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:theme="@style/AppTheme1"
                tools:layout_editor_absoluteY="25dp">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:background="@drawable/banner"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/edit_profileText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/marging_from_layout"
                        android:drawablePadding="1sp"
                        android:drawableRight="@drawable/create_change"
                        android:paddingTop="5sp"
                        android:text="Edit Profile"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginRight="@dimen/marging_from_layout" />
                </android.support.constraint.ConstraintLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_imageView"
                    android:layout_width="@dimen/ProfileImageWidth"
                    android:layout_height="@dimen/ProfileImageHeight"
                    android:layout_marginTop="64dp"
                    android:src="@drawable/profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
                    tools:ignore="MissingConstraints" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_changeImage"
                    android:layout_width="@dimen/change_image_width_height"
                    android:layout_height="@dimen/change_image_width_height"
                    android:layout_marginStart="@dimen/margin_left_changeImage"
                    android:background="@color/change_image_backgroundColor"
                    android:padding="8sp"
                    android:src="@drawable/ic_camera_icon"
                    app:layout_constraintBottom_toTopOf="@+id/editProfile"
                    app:layout_constraintStart_toStartOf="@+id/profile_imageView"
                    app:layout_constraintTop_toTopOf="@+id/profile_imageView"
                    android:layout_marginLeft="@dimen/margin_left_changeImage" />

                <TextView
                    android:id="@+id/editProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:text="Rahul Sing"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/profile_imageView"
                    app:layout_constraintStart_toStartOf="@+id/profile_imageView"
                    app:layout_constraintTop_toBottomOf="@+id/profile_imageView"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="Rahul0017"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/editProfile"
                    app:layout_constraintStart_toStartOf="@+id/editProfile"
                    app:layout_constraintTop_toBottomOf="@+id/editProfile"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/editName"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginEnd="@dimen/marging_from_layout"
                    android:layout_marginStart="@dimen/marging_from_layout"
                    android:layout_marginTop="10sp"
                    android:drawableBottom="@drawable/login_underline"
                    android:drawableLeft="@drawable/person"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

                <EditText
                    android:id="@+id/editMobileNo"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginEnd="@dimen/marging_from_layout"
                    android:layout_marginStart="@dimen/marging_from_layout"
                    android:layout_marginTop="8dp"
                    android:drawableBottom="@drawable/login_underline"
                    android:drawableLeft="@drawable/mobile"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:hint="mobile No"
                    android:maxLength="10"
                    android:inputType="number"
                    android:padding="10dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editName"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/editAddress"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginEnd="@dimen/marging_from_layout"
                    android:layout_marginStart="@dimen/marging_from_layout"
                    android:layout_marginTop="8dp"
                    android:drawableBottom="@drawable/login_underline"
                    android:drawableLeft="@drawable/ic_notebook"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:maxLines="1"
                    android:maxLength="25"
                    android:singleLine="true"
                    android:hint="Address"
                    android:inputType="textPostalAddress"
                    android:padding="10dp"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.25"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editMobileNo"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/Location"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginEnd="@dimen/marging_from_layout"
                    android:layout_marginStart="@dimen/marging_from_layout"
                    android:layout_marginTop="8dp"
                    android:drawableBottom="@drawable/login_underline"
                    android:drawableLeft="@drawable/location"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:hint="Location"
                    android:padding="10dp"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editAddress"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/EmailID"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginEnd="@dimen/marging_from_layout"
                    android:layout_marginStart="@dimen/marging_from_layout"
                    android:layout_marginTop="8dp"
                    android:drawableBottom="@drawable/login_underline"
                    android:drawableLeft="@drawable/person"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:maxLines="1"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:hint="Email"
                    android:inputType="textWebEmailAddress"
                    android:padding="10dp"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Location"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/editText_pincode"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginEnd="@dimen/marging_from_layout"
                    android:layout_marginRight="@dimen/marging_from_layout"
                    android:layout_marginTop="8dp"
                    android:drawableBottom="@drawable/login_underline"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:maxLines="1"
                    android:visibility="gone"
                    android:singleLine="true"
                    android:hint="PinCode"
                    android:inputType="number"
                    android:padding="10dp"
                    android:spinnerMode="dropdown"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/editText_ifscCode"
                    app:layout_constraintTop_toBottomOf="@+id/EmailID" />

                <EditText
                    android:id="@+id/editText_ifscCode"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginStart="@dimen/marging_from_layout"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="@dimen/marging_from_layout"
                    android:drawableBottom="@drawable/login_underline"
                    android:drawableLeft="@drawable/date_range_black_24dp"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:textAllCaps="true"
                    android:maxLines="1"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toStartOf="@+id/editText_pincode"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/EmailID"
                    android:layout_marginLeft="@dimen/marging_from_layout" />

                <TextView
                    android:id="@+id/tv_dateOfBirth"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginStart="1sp"
                    android:layout_marginEnd="@dimen/marging_from_layout"
                    android:layout_marginTop="8dp"
                    android:hint="Date Of Birth"
                    android:inputType="textPersonName"
                    android:maxLength="12"
                    android:maxLines="1"
                    android:paddingLeft="45sp"
                    android:paddingTop="11sp"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toStartOf="@+id/editText_pincode"
                    app:layout_constraintStart_toStartOf="@+id/editText_ifscCode"
                    app:layout_constraintTop_toBottomOf="@+id/EmailID"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="@dimen/marging_from_layout" />

                <EditText
                    android:id="@+id/sector_address"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginEnd="@dimen/marging_from_layout"
                    android:drawableBottom="@drawable/login_underline"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:hint="Sector"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:maxLines="1"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:visibility="gone"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/city"
                    app:layout_constraintTop_toBottomOf="@id/editText_ifscCode"
                    android:layout_marginRight="@dimen/marging_from_layout" />


                <EditText
                    android:id="@+id/gender"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginStart="@dimen/marging_from_layout"
                    android:drawableBottom="@drawable/login_underline"
                    android:drawableLeft="@drawable/location"
                    android:layout_marginEnd="@dimen/marging_from_layout"
                    android:drawableRight="@drawable/dropdown"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:hint="Select Gender"
                    android:padding="10dp"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toStartOf="@+id/sector_address"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editText_ifscCode"
                    android:layout_marginLeft="@dimen/marging_from_layout" />
                

                <EditText
                    android:id="@+id/job_occupation"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginEnd="@dimen/marging_from_layout"
                    android:layout_marginStart="@dimen/marging_from_layout"
                    android:layout_marginTop="8dp"
                    android:drawableBottom="@drawable/login_underline"
                    android:drawableLeft="@drawable/person"
                    android:drawableRight="@drawable/dropdown"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Job Occupation"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/gender" />
                <Button
                    android:id="@+id/button_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="25sp"
                    android:background="@drawable/button_background"
                    android:text="Submit"
                    android:textColor="#fff"
                    android:textSize="@dimen/editName_textSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.125"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/job_occupation" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="26dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp"
                    android:background="#fff"
                    android:elevation="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_submit" />

                <ProgressBar
                    android:id="@+id/progressBar_log"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:progressBackgroundTint="@color/Redd"
                    android:progressTint="@color/Redd"
                    android:theme="@style/AppTheme"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.422" />

            </android.support.constraint.ConstraintLayout>


        </ScrollView>
    </android.support.constraint.ConstraintLayout>
</layout>
