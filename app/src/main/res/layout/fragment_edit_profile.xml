<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:theme="@style/AppTheme1"
                tools:layout_editor_absoluteY="25dp">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:background="@drawable/banner"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" >

                    <TextView
                        android:id="@+id/edit_profileText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/marging_from_layout"
                        android:text="Edit Profile"
                        android:paddingTop="5sp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:drawablePadding="1sp"
                        android:drawableRight="@drawable/create_change"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_imageView"
                    android:layout_width="@dimen/ProfileImageWidth"
                    android:layout_height="@dimen/ProfileImageHeight"
                    android:layout_marginTop="64dp"
                    android:src="@drawable/profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
                    tools:ignore="MissingConstraints" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_changeImage"
                    android:layout_width="@dimen/change_image_width_height"
                    android:layout_height="@dimen/change_image_width_height"
                    android:layout_marginStart="@dimen/margin_left_changeImage"
                    android:padding="8sp"
                    android:background="#8db1f2"
                    android:src="@drawable/ic_camera_icon"
                    app:layout_constraintBottom_toTopOf="@+id/editProfile"
                    app:layout_constraintStart_toStartOf="@+id/profile_imageView"
                    app:layout_constraintTop_toTopOf="@+id/profile_imageView" />
                <TextView
                    android:id="@+id/editProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:text="Rahul Sing"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/profile_imageView"
                    app:layout_constraintStart_toStartOf="@+id/profile_imageView"
                    app:layout_constraintTop_toBottomOf="@+id/profile_imageView" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="Rahul0017"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/editProfile"
                    app:layout_constraintStart_toStartOf="@+id/editProfile"
                    app:layout_constraintTop_toBottomOf="@+id/editProfile"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/editName"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginEnd="@dimen/marging_from_layout"
                    android:layout_marginStart="@dimen/marging_from_layout"
                    android:drawableBottom="@drawable/login_underline"
                    android:drawableLeft="@drawable/person"
                    android:drawablePadding="10sp"
                    android:layout_marginTop="2sp"
                    android:ems="10"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

                <EditText
                    android:id="@+id/editMobileNo"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginEnd="@dimen/marging_from_layout"
                    android:layout_marginStart="@dimen/marging_from_layout"
                    android:layout_marginTop="8dp"
                    android:drawableBottom="@drawable/login_underline"
                    android:drawableLeft="@drawable/person"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:hint="mobile No"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editName"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/editAddress"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginEnd="@dimen/marging_from_layout"
                    android:layout_marginStart="@dimen/marging_from_layout"
                    android:layout_marginTop="8dp"
                    android:drawableBottom="@drawable/login_underline"
                    android:drawableLeft="@drawable/person"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:hint="Address"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.25"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editMobileNo"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/bank"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginEnd="@dimen/marging_from_layout"
                    android:layout_marginStart="@dimen/marging_from_layout"
                    android:layout_marginTop="8dp"
                    android:drawableBottom="@drawable/login_underline"
                    android:drawableLeft="@drawable/person"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:hint="Bank Name"
                    android:drawableRight="@drawable/arrow_dropdown"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editAddress"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/editAcountNo"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginEnd="@dimen/marging_from_layout"
                    android:layout_marginStart="@dimen/marging_from_layout"
                    android:layout_marginTop="8dp"
                    android:drawableBottom="@drawable/login_underline"
                    android:drawableLeft="@drawable/person"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:hint="Account Number"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bank"
                    tools:ignore="MissingConstraints" />

                <Spinner
                    android:id="@+id/spinnerGender"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginEnd="@dimen/marging_from_layout"
                    android:layout_marginTop="8dp"
                    android:drawableBottom="@drawable/login_underline"
                    android:drawableLeft="@drawable/person"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:spinnerMode="dropdown"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ifscCode"
                    app:layout_constraintTop_toBottomOf="@+id/editAcountNo"
                    android:layout_marginRight="@dimen/marging_from_layout" />

                <EditText
                    android:id="@+id/ifscCode"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginStart="@dimen/marging_from_layout"
                    android:layout_marginTop="8dp"
                    android:drawableBottom="@drawable/login_underline"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:hint="IFSC"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toStartOf="@+id/spinnerGender"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editAcountNo" />

                <TextView
                    android:id="@+id/sector_address"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginEnd="@dimen/marging_from_layout"
                    android:drawableBottom="@drawable/login_underline"
                    android:drawableRight="@drawable/arrow_dropdown"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:hint="Sector"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/city"
                    app:layout_constraintTop_toBottomOf="@id/ifscCode" />

                <TextView
                    android:id="@+id/city"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginStart="@dimen/marging_from_layout"
                    android:drawableBottom="@drawable/login_underline"
                    android:drawableLeft="@drawable/location"
                    android:drawableRight="@drawable/arrow_dropdown"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:hint="City"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toStartOf="@+id/sector_address"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ifscCode" />

                <EditText
                    android:id="@+id/pan_card"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginStart="@dimen/marging_from_layout"
                    android:layout_marginTop="8dp"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:hint="Pan Card"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toStartOf="@+id/adhar_card"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sector_address" />

                <EditText
                    android:id="@+id/adhar_card"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_for_all"
                    android:layout_marginEnd="@dimen/marging_from_layout"
                    android:layout_marginTop="8dp"
                    android:drawableBottom="@drawable/login_underline"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:hint="Adhar Card"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="#8f8f8f"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/pan_card"
                    app:layout_constraintTop_toBottomOf="@+id/sector_address" />

                <Button
                    android:id="@+id/button_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="25sp"
                    android:background="@drawable/button_background"
                    android:text="Submit"
                    android:textColor="#fff"
                    android:textSize="@dimen/editName_textSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.125"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pan_card" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="26dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp"
                    android:background="#fff"
                    android:elevation="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_submit" />


            </android.support.constraint.ConstraintLayout>


        </ScrollView>
    </android.support.constraint.ConstraintLayout>
</layout>
