<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/mainLayout"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/action_itemsImages"
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:layout_marginTop="12dp"
        android:padding="5sp"
        android:src="@drawable/homeicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/action_itemsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/action_itemsImages"
        app:layout_constraintStart_toStartOf="@+id/action_itemsImages"
        app:layout_constraintTop_toBottomOf="@+id/action_itemsImages" />

    <TextView
        android:id="@+id/view_vertical"
        android:layout_width="1sp"
        android:layout_height="0dp"
        android:background="@color/gray_set"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_horizontal"
        android:layout_width="0dp"
        android:layout_height="1sp"
        android:background="@color/gray_set"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view_vertical"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>