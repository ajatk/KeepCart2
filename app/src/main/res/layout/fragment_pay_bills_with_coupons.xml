<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.rs.keepcart.userPart_appUserScreens.payOtherBills.PayOthersBillActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_set">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/profile_Image_payotherBills"
            android:layout_height="@dimen/profile_Image_payotherBills"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/margin_top_photo"
            android:elevation="5sp"
            android:src="@drawable/profile"
            app:civ_border_color="@color/gray_set"
            app:civ_border_width="5sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="@dimen/margin_top_cardview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="16sp"
                android:layout_marginStart="16sp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp">

                    <EditText
                        android:id="@+id/mobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_for_all"
                        android:layout_marginTop="@dimen/margin_top_photo"
                        android:drawableBottom="@drawable/login_underline"
                        android:drawableLeft="@drawable/mobile"
                        android:drawablePadding="10sp"
                        android:ems="10"
                        android:hint="Mobile No"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColorHint="#8f8f8f"
                        android:textSize="@dimen/textSize"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/nameOfNewspaper"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_for_all"
                        android:layout_marginTop="16dp"
                        android:drawableBottom="@drawable/login_underline"
                        android:drawableLeft="@drawable/date_range_black_24dp"
                        android:drawablePadding="10sp"
                        android:ems="10"
                        android:hint="Name Of Newspaper"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColorHint="#8f8f8f"
                        android:textSize="@dimen/textSize"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/mobileNo" />

                    <EditText
                        android:id="@+id/enterAmount"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_for_all"
                        android:layout_marginTop="16dp"
                        android:drawableBottom="@drawable/login_underline"
                        android:drawableLeft="@drawable/ic_rupee_indian"
                        android:drawablePadding="10sp"
                        android:ems="10"
                        android:hint="Enter Amount"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColorHint="#8f8f8f"
                        android:textSize="@dimen/textSize"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nameOfNewspaper" />

                    <EditText
                        android:id="@+id/coupons"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_for_all"
                        android:layout_marginTop="16dp"
                        android:drawableBottom="@drawable/login_underline"
                        android:drawableLeft="@drawable/ic_rupee_indian"
                        android:drawablePadding="10sp"
                        android:ems="10"
                        android:hint="Enter Amount"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColorHint="#8f8f8f"
                        android:textSize="@dimen/textSize"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/enterAmount" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_for_all"
                        android:layout_marginBottom="30sp"
                        android:layout_marginTop="36dp"
                        android:background="@drawable/button_background"
                        android:text="Proceed"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/coupons" />

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
    </ScrollView>
</layout>